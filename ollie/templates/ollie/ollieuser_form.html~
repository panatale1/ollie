        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script>
            $( "#{{ form.pet.lineage.id_for_label }}" ).ready(function(){
                var lineage = document.getElementById("{{ form.pet.lineage.id_for_label }}");
                if (lineage.options[lineage.selectedIndex].value == 'single breed'){
                    document.getElementById("primary_breed").style.display = 'inline';
                    document.getElementById("secondary_breed").style.display = 'none';
                } else if (lineage.options[lineage.selected_index].value == 'mix of two breeds'){
                    document.getElementById("primary_breed").style.display = 'inline';
                    document.getElementById("secondary_breed").style.display = 'inline';
                } else {
                    document.getElementById("primary_breed").style.display = 'none';
                    document.getElementById("secondary_breed").style.display = 'none';
                };
            });
            $( "#{{ form.pet.lineage.id_for_label }}" ).change(function(){
                var lineage = document.getElementById("{{ form.pet.lineage.id_for_label }}");
                if (lineage.options[lineage.selectedIndex].value == 'single breed'){
                    $( "#primary_breed" ).show("fast");
                    $( "#secondary_breed").hide("fast");
                } else if (lineage.options[lineage.selectedIndex].value == 'mix of two breeds'){
                    $( "#primary_breed" ).show("fast");
                    $( "#secondary_breed" ).show("fast");
                } else {
                    $( "#primary_breed" ).hide("fast");
                    $( "#secondary_breed" ).hide("fast");
                };
            });
        </script>
